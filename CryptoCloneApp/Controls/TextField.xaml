<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CryptoCloneApp.Controls.TextField"
             xmlns:local="clr-namespace:CryptoCloneApp.Controls"
             x:DataType="local:TextField"
             x:Name="this"
             >

    <Grid  ColumnDefinitions="20,*,20"
           ColumnSpacing="15"
           Margin="15,5"
           HeightRequest="50"
           >

        <Image
                Source="{Binding PrefixIcon, Source={x:Reference this}}"
                HeightRequest="20"
                VerticalOptions="Center"
                HorizontalOptions="Start"
            />

 

        <Entry Grid.Column="1"
               Placeholder="{Binding Placeholder, Source={x:Reference this}}"
               ClearButtonVisibility="WhileEditing"
               IsSpellCheckEnabled="False"
               HorizontalOptions="FillAndExpand"
               VerticalOptions="CenterAndExpand"
               TextColor="White"
               IsPassword="{Binding IsPassword, Source={x:Reference this}}"
              />

 

        <Image Source="{Binding SuffixIcon, Source={x:Reference this}}"
               Grid.Column="2"
               HeightRequest="20"
               />
    </Grid>
</ContentView>